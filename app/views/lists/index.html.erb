<h1>My Lists</h1>
<%= link_to "Create a new list", new_list_path, class: "btn btn-primary shadow-sm mb-4" %>

<div class="row">
  <div class="col-md-8"> <% @lists.each do |list| %>
      <div class="card shadow-sm mb-3" style="border-radius: 12px; border: 1px solid #eee;">
        <div class="card-body d-flex justify-content-between align-items-center">

          <div>
            <h5 class="mb-1">
              <%= link_to list.name, list_path(list), class: "text-decoration-none fw-bold text-dark" %>
            </h5>
            <small class="text-muted">
              Created at: <%= list.created_at%>
            </small>
          </div>

          <div>
            <%= button_to "Delete", list_path(list),
                method: :delete,
                class: "btn btn-sm btn-outline-danger",
                style: "border-radius: 8px;" %>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>
