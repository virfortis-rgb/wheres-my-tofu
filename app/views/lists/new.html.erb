<div class="new-list-page">

  <div class="new-list-header px-4 pt-4 pb-2">
    <%= link_to lists_path, class: "back-link" do %>
      <i class="fa-solid fa-chevron-left me-1"></i>Back
    <% end %>
    <h1 class="new-list-title mt-3">New List</h1>
    <p class="new-list-subtitle">Give your list a name to get started.</p>
  </div>

  <div class="new-list-body px-4 pt-2">
    <div class="new-list-card">
      <div class="new-list-icon">ğŸ“‹</div>

      <%= form_with model: @list, local: true do |f| %>
        <div class="mb-4">
          <%= f.label :name, "List Name", class: "new-list-label" %>
          <%= f.text_field :name,
              class: "new-list-input",
              placeholder: "e.g. Weekly Groceries" %>
        </div>

        <div class="d-grid gap-3">
          <%= f.submit "Save List", class: "btn btn-primary btn-save-list" %>
          <%= link_to "Cancel", lists_path, class: "btn btn-cancel-list" %>
        </div>
      <% end %>
    </div>
  </div>

</div>
